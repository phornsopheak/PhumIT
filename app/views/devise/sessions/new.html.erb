<% provide :title, t("label.sign_in") %>
<div class="panel panel-info sign-in-box">
  <div class="panel-heading  no-radius">
    <%= link_to root_path do %>
      <%= image_tag "app_icon.png", "data-toggle" => "tooltip",
       "title" => "Home" %>
    <% end %>
    <span class="font-text"><%= t "label.sign_in" %></span>
  </div>
  <div class="panel-body no-radius">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field ">
      <%= t("label.email") %>
      <%= f.email_field :email, autofocus: true,required: true , class: "form-control no-radius" %>
      <br/>
    </div>

    <div class="field">
      <%= t("label.password") %>
      <%= f.password_field :password, autocomplete: "off",required: true , class: "form-control no-radius" %>
      <br/>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= t("label.remember") %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" , class: "btn btn-primary no-radius"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
