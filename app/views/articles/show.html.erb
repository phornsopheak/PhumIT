<% provide :title, @article.title %>
<div class="col-md-12 article">
  <div class="col-md-8">
    <div class="content-article">
      <div class="title">
        <h3><%= @article.title %></h3>
        <div class="detail">
          <span class="fa fa-calendar"></span>
          &nbsp;<%= @article.created_at.strftime("%Y-%m-%d %I:%M %p") %>|
          <span class="fa fa-eye"></span>
          <%= @article.view %>|
          <span class="fb-like" data-href="<%= request.original_url %>" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></span>
        </div>
      </div>
      <%= image_tag @article.image_url %>
      <div class="description-box">
        <%= @article.description.html_safe %>
      </div>
      <%= render "footer_article" %>
      <div class="fb-comments" data-href="<%= request.original_url %>" data-numposts="10" ></div>
    </div>
  </div>

  <div class="col-md-4 side-bar facebook-like-page">
    <%= render "fb_page" %>
  </div>
  <div class="col-md-4 side-bar">
    <%= render "relate_side_bar" %>
  </div>
  <div class="col-md-4 side-bar">
    <%= render "popular_side_bar" %>
  </div>
</div>
