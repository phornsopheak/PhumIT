          </div>
          <div class="item">
            <%= image_tag @articles.fifth.image_url %>
            <div class="title-article"><%= @articles.fifth.title %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12 clear-col-margin">
    <div class="wraper-header clear-col-margin">
      <div class="header-category">
        <%= link_to category_path(1) do %>
          <span class="fa fa-newspaper-o"></span>
          <%= t "tab_bar.news" %>
        <% end %>
        <span class="fa fa-chevron-up cursor arrow-position" id="hide-show-news"></span>
        <%= link_to category_path(1), class: "pull-right more-article" do %>
          <i><%= t "label.more_article" %></i>
        <% end %>
      </div>
    </div>
    <div class="contain-category category-news">
      <% @articles = @news_articles %>
      <%= render "category_show" %>
    </div>
  </div>

