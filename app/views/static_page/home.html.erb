<% provide :title, t("tab_bar.home") %>
<div class="home">
  <div class="col-md-12 clear-col-margin">
    <div class="contain-category category-articles">
      <div class="col-md-12 clear-col-margin">
        <div id="owl-demo" class="owl-carousel owl-theme">
          <div class="item">
            <%= image_tag @articles.first.image_url %>
            <div class="title-article"><%= @articles.first.title %></div>
          </div>
          <div class="item">
            <%= image_tag @articles.second.image_url %>
            <div class="title-article"><%= @articles.second.title %></div>
          </div>
          <div class="item">
            <%= image_tag @articles.third.image_url %>
            <div class="title-article"><%= @articles.third.title %></div>
          </div>
          <div class="item">
            <%= image_tag @articles.fourth.image_url %>
