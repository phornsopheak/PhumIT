<div class="panel panel-<%= check_panel category.id %>">
  <div class="panel-heading">
    <div class="row">
      <div class="col-xs-7">
        <% if check_icon(category.id) == "computer" %>
          <%= render "shared/computer_icon" %>
        <% elsif check_icon(category.id) == "mobile" %>
          <%= render "shared/mobile_icon" %>
        <% else %>
          <%= link_to category_path(category) do %>
            <i class="fa fa-<%= check_icon(category.id) %> fa-2x"
              data-toggle="tooltip" data-placement="top"
              title="<%= check_title_sidebar(category.id) %>"></i>
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-5 text-right">
        <%= t "articles.labels.total_article" %>:&nbsp;
        <span class="huge">
          <%= category.articles.count %>
        </span>
        <span class="small-icon">
          <%= category.articles.count %>
        </span>
      </div>
    </div>
  </div>
  <%= link_to category_path(category) do %>
    <div class="panel-footer">
      <span class="pull-left">
        <%= check_title_sidebar category.id %>
      </span>
      <span class="pull-right">
        <i class="fa fa-arrow-circle-right"></i>
      </span>
      <div class="clearfix"></div>
    </div>
  <% end %>

  <%= link_to category_path(article) do %>
    <div class="panel-footer">
      <span class="pull-left">
        <%= check_title_sidebar category.id %>
      </span>
      <span class="pull-right">
        <i class="fa fa-arrow-circle-right"></i>
      </span>
      <div class="clearfix"></div>
    </div>
  <% end %>
</div>
