<div class="header">
  <%= render "shared/cover" %>
  <nav class="navbar navbar-default navbar-buttom">
    <div class="container-fluid">

      <!-- Brand and toggle get grouped for better mobile display -->

      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <%= search_form_for @q, class: "input-group navbar-form navbar-left search-navbar" do |f| %>
          <%= f.search_field :title, class: "form-control search-nav", placeholder: t("label.search_for") %>
          <span class="input-group-btn">
            <%= f.submit t("label.go"), class: "btn btn-primary no-radius" %>
          </span>
        <% end %>

        <ul class="nav navbar-nav navbar-left">
          <li>
            <%= link_to root_path, "data-toggle" => "tooltip", "title" => "Home", "data-placement" => "right", class: "hvr-underline-reveal" do %>
              <span class="fa fa-home" style="color: white;"></span>
            <% end %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to category_path(1), class: "hvr-underline-reveal" do %>
              <span class="fa fa-newspaper-o" style="color: orange;"></span>
              <span class="text-color"><%= t "tab_bar.news" %></span>
            <% end %>
          </li>
          <li class="dropdown">
            <%= link_to category_path(2), class: "dropdown-toggle disabled hvr-underline-reveal", "data-toggle" =>"dropdown",
              "role" => "button", "aria-haspopup" => "true", "aria-expanded" => "false" do %>
              <span class="fa fa-desktop" style="color: #64DD17;"></span>
              <span class="text-color"><%= t "tab_bar.computer" %></span>
              <span class="caret text-color"></span>
            <% end %>
            <ul class="dropdown-menu background-menu">
              <li>
                <%= link_to list_path(1) do %>
                  <span class="fa fa-windows" style="color: #5bc0de;"></span>
                  <span class="text-color">&nbsp;&nbsp;<%= t "sub_tab_bar.computer.operation_system" %></span>
                <% end %>
              </li>
              <li>
                <%= link_to list_path(2) do %>
                  <span class="fa fa-hdd-o" style="color: #9F81F7;"></span>
                  <span class="text-color">
                    &nbsp;&nbsp;<%= t "sub_tab_bar.computer.hardware" %>
                  </span>
                <% end %>
              </li>
              <li>
                <%= link_to list_path(3) do %>
                  <span class="fa fa-recycle" style="color: #795548;"></span>
                  <span class="text-color">
                    &nbsp;&nbsp;<%= t "sub_tab_bar.computer.software" %>
                  </span>
                <% end %>
              </li>
              <li>
                <%= link_to list_path(4) do %>
                  <span class="fa fa-lightbulb-o" style="color: #f0ad4e;"></span>
                  <span class="text-color">&nbsp;&nbsp;<%= t "sub_tab_bar.computer.tip_computer" %></span>
                <% end %>
              </li>
            </ul>
          </li>
          </li>
          <li class="dropdown">
            <%= link_to category_path(3), class: "dropdown-toggle disabled hvr-underline-reveal", "data-toggle" =>"dropdown",
              "role" => "button", "aria-haspopup" => "true", "aria-expanded" => "false" do %>
              <span class="fa fa-tablet" style="color: #F44336;"></span>
              <span class="text-color"><%= t "tab_bar.mobile" %></span>
              <span class="caret text-color"></span>
            <% end %>
            <ul class="dropdown-menu background-menu">
              <li>
                <%= link_to list_path(5) do %>
                  <span class="fa fa-th-large" style="color: #5bc0de;"></span>
                  <span class="text-color">
                    &nbsp;&nbsp;<%= t "sub_tab_bar.mobile.window_phone" %>
                  </span>
                <% end %>
              </li>
              <li>
                <%= link_to list_path(6) do %>
                  <span class="fa fa-android" style="color: #5cb85c;"></span>
                  <span class="text-color">
                    &nbsp;&nbsp;<%= t "sub_tab_bar.mobile.android" %>
                  </span>
                <% end %>
              </li>
              <li>
                <%= link_to list_path(7) do %>
                  <span class="fa fa-apple" style="color: black;"></span>
                  <span class="text-color">&nbsp;&nbsp;<%= t "sub_tab_bar.mobile.ios" %></span>
                <% end %>
              </li>
              <li>
                <%= link_to list_path(8) do %>
                  <span class="fa fa-lightbulb-o" style="color: #f0ad4e;"></span>
                  <span class="text-color">&nbsp;&nbsp;<%= t "sub_tab_bar.mobile.tip_mobile" %></span>
                <% end %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to category_path(4), class: "hvr-underline-reveal" do %>
              <span class="fa fa-book" style="color: #FFEB3B;"></span>
              <span class="text-color"><%= t "tab_bar.more_knowledge" %></span>
            <% end %>
          </li>
          <li>
            <%= link_to category_path(5), class: "hvr-underline-reveal" do %>
              <span class="fa fa-pie-chart" style="color: #E91E63;"></span>
              <span class="text-color"><%= t "tab_bar.electronic_device" %></span>
            <% end %>
          </li>
          <li>
            <%= link_to about_us_path, class: "hvr-underline-reveal" do %>
              <span class="fa fa-info-circle" style="color: #5bc0de;"></span>
              <span class="text-color"><%= t "tab_bar.about_us" %></span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
